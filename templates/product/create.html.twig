{% extends 'base.html.twig' %}

{% block title %}Create Product{% endblock %}

{% block body %}
    <div class="container">
        <a href="{{ path('app_product_list') }}" class="gray-link my-3">Volver</a>
        <h1 class="text-center mb-4">Crear producto</h1>

        {{ form_start(form, { 'attr': { 'data-turbo': 'false' } }) }}
            <div class="form-group mb-4">
                {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter product name'}}) }}
                {{ form_errors(form.name) }}
            </div>
            <div class="form-group mb-4">
                {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Enter product description'}}) }}
                {{ form_errors(form.description) }}
            </div>
            <div class="form-group mb-4">
                {{ form_label(form.price, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.price, {'attr': {'class': 'form-control', 'placeholder': 'Enter product price'}}) }}
                {{ form_errors(form.price) }}
            </div>
            <div class="form-group mb-4">
                {{ form_label(form.stock, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.stock, {'attr': {'class': 'form-control', 'placeholder': 'Enter product stock quantity'}}) }}
                {{ form_errors(form.stock) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
