{% extends 'base.html.twig' %}

{% block title %}Crear Producto{% endblock %}

{% block body %}
    <div class="container">
        <a href="{{ path('app_product_list') }}" class="gray-link my-3">Volver</a>
        <h1 class="text-center mb-4">Crear producto</h1>

        {{ form_start(form, { 'attr': { 'data-turbo': 'false' } }) }}

            <!-- Nombre del producto -->
            <div class="form-group mb-4">
                {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Introduce producto'}}) }}
                <div class="text-danger">{{ form_errors(form.name) }}</div>
            </div>

            <!-- descripcion producto -->
            <div class="form-group mb-4">
                {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Introduce descripci√≥n'}}) }}
                <div class="text-danger">{{ form_errors(form.description) }}</div>
            </div>

            <!-- precio del producto -->
            <div class="form-group mb-4">
                {{ form_label(form.price, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.price, {'attr': {'class': 'form-control', 'placeholder': 'Introduce precio'}}) }}
                <div class="text-danger">{{ form_errors(form.price) }}</div>
            </div>

            <!-- stock producto -->
            <div class="form-group mb-4">
                {{ form_label(form.stock, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.stock, {'attr': {'class': 'form-control', 'placeholder': 'Cantidad stock'}}) }}
                <div class="text-danger">{{ form_errors(form.stock) }}</div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
