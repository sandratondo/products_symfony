{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
<h1>Edit Product</h1>

{{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.description) }}
    {{ form_row(form.price) }}
    {{ form_row(form.stock) }}
    <button type="submit" class="btn btn-primary">Save Changes</button>
{{ form_end(form) }}

{% endblock %}
